        "/api/oauth/sign-in": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Get an access token for logining the user for mobile app",
                "operationId": "f5bc6de6438036061681701e226bd20a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "futureinventor@umail.uz"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Access token generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "generated-access-token"
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": "refresh-token-if-enabled"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "invalid_credentials"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "The user credentials were incorrect."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "invalid_request"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "The request is missing a required parameter, includes an unsupported parameter, or is otherwise malformed."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
