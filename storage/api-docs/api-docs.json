        "/api/auth/apple": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Authenticate with Apple",
                "operationId": "2b8424194a5d796b8af04a2780582006",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "userIdentifier"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "userIdentifier": {
                                        "type": "string",
                                        "example": "unique-user-identifier"
                                    },
                                    "fullName": {
                                        "type": "string",
                                        "example": "John Doe"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful authentication",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
